<h4>Send Notification Now</h4>
<%= simple_form_for [@patient, @notification] do |f| %>
  <%= f.input :tip_flag, :as => :select, 
            :collection => [['Normal Message', FALSE],['Tip',TRUE]], 
            :include_blank => false, 
            :label => "Message Type", input_html: { data: { 'dynamic-view-control': '#notification-field' } } %>
  <div id="notification-field" data-dynamic-view="true" data-dynamic-view-url="<%= fields_notifications_path %>">
      <%= render partial: 'fields', locals: {type: notification.tip_flag} %>
  </div>
  <div class="notification_hide_time">
    <%= f.input :send_at %>
    <%= f.input :alert, :input_html => { :value => 10 } %>
    <%= f.input :target_patient, :input_html => { :value => @patient.id } %>
  </div> 
  <%= f.button :submit, 'Send Now!', class: 'btn-primary' %>
<% end %>
