<div class="row sign-in">
  <div class="col-md-8 col-lg-6 col-md-push-2 col-lg-push-3 panel panel-default sign-in__top-spaced">
    <div class="panel-body">
      <h2><%= t('user.views.headers.confirm') %></h2>
        <%= simple_form_for(resource, as: resource_name, url: confirm_path, method: :PUT) do |form| %>
          <%= devise_error_messages! %>
          <div class="form-inputs">
            <%= form.input :password, :input_html => {:autofocus => true} %>
            <%= form.input :password_confirmation %>
            <%= form.input :confirmation_token, :as => :hidden %>
          </div>
          <div class="form-actions">
            <%= form.button :submit, class: 'btn-default' %>
          </div>
        <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
