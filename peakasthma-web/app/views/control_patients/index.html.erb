<div class="row">
  <div class="col-md-4 col-md-offset-8">
    <div class="panel panel-default">
      <div class="panel-body text-center">
        <%= link_to t('control_patient.views.buttons.create'), new_control_patient_path, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="text-center">
                <%= form_tag(control_patients_url, method: "get", class: "flex-row") do %>
                  <%= search_field_tag :search, params[:search], placeholder: "Control Patient Name", class: "form-control" %>
                  <div class="input-group-btn">
                      <%= button_tag "Search", :class => 'btn btn-info', :name => nil %>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <%= render 'patient_table' %>
    <%= will_paginate @controlPatients %>
  </div>
</div>
