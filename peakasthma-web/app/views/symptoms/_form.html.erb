<%= simple_form_for symptom do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :name %>
    </div>
    <div class="col-md-6">
      <%= f.input :level, collection: PeakFlow::LEVELS %> 
    </div>
    <div class="col-md-6">
      <%= f.input :category %> 
    </div>
    <div class="col-md-6">
      <%= f.input :emergency, :as => :select, 
                        :collection => [true, false], 
                        :include_blank => false, 
                        :label => "Is Emergency Symptom?" %>
    </div>
  </div>
  <%= f.button :submit, class: 'btn-default' %>
<% end %>
