<div class="patient-profile__table-header">
  <%= t('patient.views.headers.additional_info') %>
</div>
<div class="panel panel-default">
  <div class="patient-profile-table">
    <%= render 'shared/mobile_table_row', block_name: 'patient-profile-table', header: t('user.model.email'), value: @patient.user.email %>
    <%= render 'shared/mobile_table_row', block_name: 'patient-profile-table', header: t('user.model.username'), value: @patient.user.username %>
    <%= render 'shared/mobile_table_row', block_name: 'patient-profile-table', header: t('user.model.phone'), value: @patient.phone %>
    <%= render 'shared/mobile_table_row', block_name: 'patient-profile-table', header: t('patient.model.physician'), value: @patient.physician %>
    <%= render 'shared/mobile_table_row', block_name: 'patient-profile-table', header: t('patient.model.start_date'), value: l(@patient.created_at) %>
    <%= render 'shared/mobile_table_row', block_name: 'patient-profile-table', header: t('patient.model.redcap_id'), value: @patient.redcap_id %>
    <%= render 'shared/mobile_table_row', block_name: 'patient-profile-table', header: t('user.model.account_status'), value: @patient.user.disabled ? 'Disabled' : 'Active' %>
  </div>
</div>
